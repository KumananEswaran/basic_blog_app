<%= form_with(model: blog_post, local: true, class: "max-w-2xl mx-auto bg-white shadow-lg rounded-2xl p-8") do |form| %>
  <% if blog_post.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-600 px-4 py-3 rounded-md mb-6 border border-red-200">
      <h2 class="font-semibold text-lg mb-2">
        <%= pluralize(blog_post.errors.count, "error") %> prevented this post from being saved:
      </h2>
      <ul class="list-disc list-inside text-sm">
        <% blog_post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h2 class="text-3xl font-semibold text-indigo-700 mb-8 text-center">
    <%= blog_post.persisted? ? "Edit Blog Post" : "New Blog Post" %>
  </h2>

  <!-- Title -->
  <div class="mb-6">
    <%= form.label :title, class: "block text-gray-700 font-medium mb-2" %>
    <%= form.text_field :title, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
  </div>

  <!-- Body -->
  <div class="mb-6">
    <%= form.label :body, class: "block text-gray-700 font-medium mb-2" %>
    <%= form.rich_text_area :body, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
  </div>

  <!-- Meta Description -->
  <div class="mb-6">
    <%= form.label :meta_description, class: "block text-gray-700 font-medium mb-2" %>
    <%= form.text_area :meta_description, rows: 3, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
  </div>

  <!-- Meta Title -->
  <div class="mb-6">
    <%= form.label :meta_title, class: "block text-gray-700 font-medium mb-2" %>
    <%= form.text_field :meta_title, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
  </div>

  <!-- Meta Image -->
  <div class="mb-6">
    <%= form.label :mrta_image, "Meta Image", class: "block text-gray-700 font-medium mb-2" %>
    <%= form.file_field :mrta_image, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
  </div>

  <!-- Banner Image -->
  <div class="mb-6">
    <%= form.label :banner_image, class: "block text-gray-700 font-medium mb-2" %>
    <%= form.file_field :banner_image, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
  </div>

  <!-- Tags -->
  <div class="mb-6">
    <%= form.label :tags, class: "block text-gray-700 font-medium mb-2" %>
    <%= form.text_area :tags, rows: 2, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
  </div>

  <!-- Submit Button -->
  <div class="text-center mt-8">
    <%= form.submit (blog_post.persisted? ? "Update Post" : "Create Post"),
      class: "bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2.5 px-6 rounded-md transition cursor-pointer" %>
  </div>
<% end %>
