<section class="bg-gray-100 flex items-center justify-center py-20 px-4">
  <div class="bg-white shadow-lg rounded-2xl w-full max-w-md p-8">
    <h2 class="text-3xl font-semibold text-center text-indigo-700 mb-6">Welcome Back</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 font-medium mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-700 font-medium mb-2" %>
        <%= f.password_field :password, autocomplete: "current-password",
              class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>

      
      <%# if devise_mapping.rememberable? %>
        <div class="flex items-center mb-6">
          <%#= f.check_box :remember_me, class: "mr-2 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
          <%#= f.label :remember_me, class: "text-gray-700 text-sm" %>
        </div>
      <%# end %>
      

      <div>
        <%= f.submit "Log In", class: "w-full bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-md transition cursor-pointer" %>
      </div>
    <% end %>

    <div class="text-center mt-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>
