<div class="min-h-screen w-full overflow-x-hidden flex flex-col bg-gray-100">

  <!-- Hero Section -->
  <section class="flex flex-col justify-center items-center text-center px-6 py-20 bg-indigo-600 text-white">
    <h2 class="text-4xl md:text-6xl font-bold mb-4">
      Welcome to The Daily Blog
    </h2>
    <p class="text-lg md:text-xl max-w-2xl text-indigo-100 mb-8">
      Discover stories, share your thoughts, and connect with a community of writers and readers.
    </p>
  </section>

  <!-- Card Section -->
  <section class="py-16 bg-gray-100">
    <div class="max-w-6xl mx-auto px-6 grid md:grid-cols-2 gap-8">
      
      <!-- Sign In Card -->
      <div class="bg-gray-100 rounded-xl shadow-md p-8 text-center hover:shadow-lg transition">
        <h3 class="text-2xl font-bold mb-3 text-indigo-800">Already a Member?</h3>
        <p class="text-gray-700 mb-6">
          Log in to access your dashboard, write new posts, and interact with other readers.
        </p>
        <%= link_to "Sign In", new_user_session_path,
              class: "inline-block bg-black text-white rounded-lg px-4 py-2 hover:bg-gray-700 transition" %>
      </div>

      <!-- Register Card -->
      <div class="bg-indigo-100 rounded-xl shadow-md p-8 text-center hover:shadow-lg transition">
        <h3 class="text-2xl font-bold mb-3 text-indigo-800">New to The Daily Blog?</h3>
        <p class="text-gray-700 mb-6">
          Create your free account to start writing, sharing, and engaging with inspiring stories.
        </p>
        <%= link_to "Register", new_user_registration_path,
              class: "inline-block bg-indigo-500 text-white rounded-lg px-4 py-2 hover:bg-indigo-600 transition" %>
      </div>

    </div>
  </section>

  <!-- Footer -->
  <footer class="py-6 text-center text-blue-800 bg-gray-100 text-sm">
    © <%= Time.current.year %> The Daily Blog. Built with ❤️ using Ruby on Rails.
  </footer>
</div>
